<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:util="http://www.springframework.org/schema/util"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:c="http://www.springframework.org/schema/c"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <context:annotation-config/>
    <context:component-scan base-package="lab.model"/>

    <bean id="id" class="java.lang.Integer" c:value="1"/>
    <bean id="age" class="java.lang.Integer" c:value="35"/>
    <bean id="name" class="java.lang.String" c:value="John Smith"/>
    <bean id="isProgrammer" class="java.lang.Boolean" c:value="true"/>
    <bean id="isBroke" class="java.lang.Boolean" c:value="false"/>
    <bean id="height" class="java.lang.Float" c:value="1.78"/>

    <bean id="countryName" class="java.lang.String" c:value="Russia"/>
    <bean id="codeName" class="java.lang.String" c:value="RU"/>

